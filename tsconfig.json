{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2021",
        "jsx": "preserve",
        "lib": ["DOM", "ES2021"],
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./src/**/*"]
}
